FROM node:20-alpine AS base

WORKDIR /app

COPY package*.json ./

RUN npm install --production=false

COPY . .

ENV NODE_ENV production

# Admin build stage
FROM node:20-alpine AS admin

WORKDIR /admin

COPY package*.json ./

RUN npm install --production=false

# Copy Admin code from build stage (assuming the build output is in a "dist" folder)
COPY ../dist .  

ENV NODE_ENV production

CMD ["node", "server.js"]