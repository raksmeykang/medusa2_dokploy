FROM node:20-alpine
WORKDIR /app

RUN apk add --no-cache python3 make g++
RUN corepack enable && corepack prepare yarn@stable --activate
ENV YARN_NODE_LINKER=node-modules

# 1. Install dependencies
COPY backend/package.json backend/yarn.lock* ./
RUN yarn install

# 2. Copy source
COPY backend/ .

# 3. Inject the Backend URL for the static build
ARG MEDUSA_BACKEND_URL=https://api.nokor24.com
ENV MEDUSA_BACKEND_URL=$MEDUSA_BACKEND_URL

# 4. Build the Admin static files (Medusa v2 syntax)
RUN npx medusa build --admin-only

# 5. Install a lightweight static server
RUN npm install -g serve

# Keep it on 9000 to match your existing Dokploy configuration
EXPOSE 9000

# Serve the build folder as a Single Page App (-s) on port 9000
CMD ["serve", "-s", ".medusa/admin", "-l", "9000"]