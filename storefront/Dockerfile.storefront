FROM ubuntu:22.04

# Prevent interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# 1. Install core system tools
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    sudo \
    jq \
    ca-certificates \
    git \
    bash \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# 2. Set the working directory
WORKDIR /app

# 3. Stay alive forever
# This allows you to access the 'Console' tab in Dokploy anytime
CMD ["sleep", "infinity"]