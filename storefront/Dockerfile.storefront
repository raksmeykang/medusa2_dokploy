FROM node:20-alpine

WORKDIR /app

# Enable Corepack for Yarn 4
RUN corepack enable && corepack prepare yarn@4.12.0 --activate

# Copy everything in the storefront directory
# This avoids the "not found" error for specific files
COPY . .

# Install dependencies 
# (Yarn will look for package.json in the current directory)
RUN yarn install

# Build the Next.js storefront
RUN yarn build

# Start the application
CMD ["yarn", "start"]